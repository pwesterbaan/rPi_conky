${voffset -50}${font caviar dreams:size=34}${time %b}${font}${voffset 5} ${font caviar dreams:size=40}${time %Y} ${font}
${voffset 105}${execi 900 ./getWeather.sh}${alignr}
${voffset 75}${font Liberation Mono:size=25}
