

background no
update_interval 1

cpu_avg_samples 2
net_avg_samples 2

override_utf8_locale yes

double_buffer yes
no_buffers yes

text_buffer_size 2048

temperature_unit fahrenheit

own_window yes
own_window_transparent no
own_window_type desktop
own_window_argb_visual yes
own_window_class override

--own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager 
--own_window_argb_value 100

border_inner_margin 0
border_outer_margin 0

minimum_size  700
--maximum_width 700


-- Graphics settings 
draw_shades no
alignment mm
draw_outline no
draw_borders no
draw_graph_borders no

-- Text settings 
use_xft yes
xftfont caviar dreams:size=8
xftalpha 0.5

default_color FFFFFF

times_in_seconds true

-- Lua Load 
lua_load ~/.conky/clock_rings.lua
lua_draw_hook_pre clock_rings
--lua_load ./marks.lua
TEXT
${voffset 8}${font caviar dreams:size=32}${alignc}${time %A}${font}${voffset -8}${font caviar dreams:size=76}   ${time %e}${font}
${voffset -70}${font caviar dreams:size=34}${alignc}${time %b}${font}${voffset -5}   ${font caviar dreams:size=40}${time %Y}  ${font}${hr}
${voffset 550}
